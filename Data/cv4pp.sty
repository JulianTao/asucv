\DeclareSortingTemplate{ty}{
	\sort{
		\field{title}
	}
	\sort{
		\field{year}
	}
}
% Define annotation symbols %
\renewcommand*{\mkbibnamegiven}[1]
{
	\ifitemannotation{phd}
	{\textbf{#1}}%
	{\ifitemannotation{phd2}
		{\textbf{\textit{#1}}}%
		{\ifitemannotation{ms}
			{\underline{#1}}%
			{#1}%
		}%
	}%
}%%
\renewcommand*{\mkbibnamefamily}[1]{
	\ifitemannotation{phd}
	{\textbf{#1}}%
	{\ifitemannotation{phd2}
		{\textbf{\textit{#1}}}%
		{\ifitemannotation{ms}
			{\underline{#1}}%
			{#1}%
		}%
	}%
	\ifitemannotation{corresponding}
	{\textsuperscript{*}}
	{}%
	\ifitemannotation{under}
	{\textsuperscript{\#}}
	{}%
	\ifitemannotation{other}
	{$^\infty$}
	{}%
	\ifitemannotation{postdoc}
	{$^\times$}
	{}%
	\ifitemannotation{hs}
	{$^\ddagger$}
	{}%
	\ifitemannotation{equal}
	{$^+$}
	{}%
	\ifitemannotation{present}
	{$^\sim$}
	{}%
}%%

